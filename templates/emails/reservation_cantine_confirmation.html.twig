{% block body %}
    <div style="text-align: center; background-color: #f2f2f2; padding: 30px;">
        <h1 style="font-size: 36px; margin-bottom: 20px;">Confirmation de la réservation</h1>
        <p style="font-size: 18px; margin-bottom: 30px;">Bonjour {{ reservationCantine.user.uuid }},</p>
        <div style="background-color: white; padding: 30px; border-radius: 10px; box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);">
{#            <p style="font-size: 24px; margin-bottom: 20px;">Votre réservation pour le repas est prévue pour :</p>#}
            <p style="font-size: 18px; margin-bottom: 30px;">Veuillez confirmer votre réservation pour le repas du midi, avant 10h.</p>
            <div style="display: flex; justify-content: center;">
                <a href="https://127.0.0.1:8000/confirmCantine/{{ reservationCantine.id }}" style="background-color: #28a745; color: white; font-size: 18px; padding: 10px 30px; border-radius: 5px; text-decoration: none; margin-right: 20px;">Confirmer</a>
                <a href="https://127.0.0.1:8000/cancelCantine/{{ reservationCantine.id }}" style="background-color: #dc3545; color: white; font-size: 18px; padding: 10px 30px; border-radius: 5px; text-decoration: none;">Annuler</a>
            </div>
        </div>
    </div>
{% endblock %}
