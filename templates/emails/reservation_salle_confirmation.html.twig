{% block body %}
    <div style="text-align: center; background-color: #f2f2f2; padding: 30px;">
{#        <img src="{{ asset(logoUrl) }}" alt="Logo de la société" style="max-width: 200px; margin-bottom: 20px;">#}
        <h1 style="font-size: 36px; margin-bottom: 20px;">Confirmation de réservation</h1>
        <p style="font-size: 18px; margin-bottom: 30px;">Bonjour {{ reservationSalle.user.uuid }},</p>
        <div style="background-color: white; padding: 30px; border-radius: 10px; box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.1);">
            <p style="font-size: 24px; margin-bottom: 20px;">Votre réservation de la salle de réunion est prévue pour :</p>
            <p style="font-size: 18px; margin-bottom: 30px;"><strong>Date de début :</strong> {{ reservationSalle.dateDebut|date('Y-m-d H:i:s') }}</p>
            <p style="font-size: 18px; margin-bottom: 30px;"><strong>Date de fin :</strong> {{ reservationSalle.dateFin|date('Y-m-d H:i:s') }}</p>
            <p style="font-size: 18px; margin-bottom: 30px;">Veuillez confirmer ou annuler votre réservation au moins 1 heure avant l'heure réservée.</p>
            <div style="display: flex; justify-content: center;">
                <a href="https://127.0.0.1:8000/confirmSalle/{{ reservationSalle.id }}" style="background-color: #28a745; color: white; font-size: 18px; padding: 10px 30px; border-radius: 5px; text-decoration: none; margin-right: 20px;">Confirmer</a>
                <a href="https://127.0.0.1:8000/cancelSalle/{{ reservationSalle.id }}" style="background-color: #dc3545; color: white; font-size: 18px; padding: 10px 30px; border-radius: 5px; text-decoration: none;">Annuler</a>
            </div>
        </div>
    </div>
{% endblock %}
